<%- include("partials/header") %>
  <main class="d-flex flex-column justify-content-center align-items-center w-75">
    <div class="w-auto">
      <div class="d-flex flex-column justify-content-center align-items-center gap-3">
        <p class="m-0"><%= post.title %></p>
        <p class="m-0"><%= post.content %></p>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-center mt-4 gap-3">
        <a href="/update/<%= post.id %>">
          <button class="btn btn-light" type="button">Edit</button>
        </a>
        <a href="/delete/<%= post.id %>">
          <button class="btn btn-danger" type="button">Delete</button>
        </a>
      </div>
    </div>
  </main>
<%- include("partials/footer") %>